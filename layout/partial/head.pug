meta(charset="utf-8")
meta(name="X-UA-Compatible", content="IE=edge")

title
    block site_title
        = config.title
block description
    meta(name="og:title", content= config.title)
    meta(name="og:type", content= "homepage")
    meta(name="og:description", content= config.description)
    meta(name="description", content= config.description)

meta(name="viewport", content="width=device-width, initial-scale=1")
link(rel="icon", href=url_for(theme.favicon))
link(rel="stylesheet", href=url_for("vendor/slick/slick.css"))
link(rel="stylesheet", href=url_for("vendor/slick/slick-theme.css"))
link(rel="stylesheet", href=url_for("vendor/slickNav/slicknav.css"))
link(rel="stylesheet", href=url_for("vendor/jquery-modal/jquery.modal.css"), type="text/css", media="screen")
link(rel="stylesheet", href=url_for("css/main.css"))
link(href="https://fonts.googleapis.com/css?family=Libre+Baskerville",rel="stylesheet")

- var xml = config.url + '/atom.xml'
    link(rel="search", type="application/opensearchdescription+xml", href=xml, title=config.title)
