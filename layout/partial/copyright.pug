- var general  = site.data.general

mixin copyright(conferenceKeyword, cityKeyword)
    .copyright
        include social-bar
        p
            if conferenceKeyword
                != general["footer-text"].replace("%{conferenceKeyword}", conferenceKeyword).replace("%{cityKeyword}", cityKeyword)
            else
                != general["footer-text"].replace("%{conferenceKeyword}", "AI conference / Machine Learning conference / Deep Learning conference / NLP conference").replace("near %{cityKeyword}", "at San Jose <br>")
            | organized by Â© #[span!= general["company-name"]]
