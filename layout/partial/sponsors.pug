mixin sponsor-card(name, img, height, offset)
    - height = height ? height : 40;
    - offset = offset ? offset : 0;
    img.spnr-logo(src=img, alt=name, style="height: " + height + "px; top: " + offset + "px;")

-
    var lastSpnrs = site.data.sponsors["last-years-sponsors"]
    var thisSpnrs = site.data.sponsors["this-years-sponsors"]
.module.module-spnrs
    a.module-title(name="spnrs")
        | Sponsors
    span.last-years-spnrs
        | Last Year's Sponsors
    .spnrs
        each spnr in lastSpnrs
            +sponsor-card(spnr["name"], spnr["logo"], spnr["height"], spnr["offset"])
