- var general = site.data.general
mixin topic-card(title, image, description)
    - var urlizedTitle = title.toLowerCase().split(' ').join('-')
    a.topic-card(href="#" + urlizedTitle)
        .topic-image-wrapper
            img.topic-image(src=image)
            .topic-image-mask
            span.topic-title
                != title
        span.topic-description
            != description

.module.module-topics#topics
    h1.module-title(name="topics")
        != general["topics-title"]
    .topics
        - for (num in site.data.topics) {
        - item = site.data.topics[num]
            +topic-card(item["title"],item["image"],item["description"])
        - }
