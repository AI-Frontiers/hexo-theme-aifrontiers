mixin session(time, title, description, speakers, dim)
    if (!session["dim"])
        .session
            .session-title
                .session-time
                    != time
                if time
                    .session-time-mobile
                        != time
                != title
            .session-description
                != description
    else
        .session.dim
            .session-time
                != time
            .session-title
                != title
            .session-description
                != description

- var programs = site.data.programs
.module.module-program
    a.module-title(name="program")
        | Conference Program
    p.program-description
        != site.data.programs_text["conference-description"]
    .program
        - var m = programs.length
        - for (day in programs) {
             - sessions = programs[day]
             .heading-box
                 a.day-heading
                     != day
                 - if (day == "Day 1") {
                 span.day-date November 9, 2018
                 - }
                 - if (day == "Day 2") {
                 span.day-date November 10, 2018
                 - }
                 - if (day == "Day 3") {
                 span.day-date November 11, 2018
                 - }
             - n = sessions.length
             - for (var i = 0; i < n; i++) {
                   - var session = sessions[i]
                       + session(session["time"], session["title"], session["description"], session["speakers"], session["dim"])
             - }
        - }
